<html>
<head>

</head>
    $webResourceManager.requireResource("ru.pestov.alexey.plugins.spring.issue-assigneer:selects-resources")
    $webResourceManager.requireResource("com.atlassian.auiplugin:aui-toggle")
<body>
<div class="aui-message aui-message-info">
    <p class="title">
        <strong>Сервис для управления участниками релизного процесса</strong>
    </p>
    <p><a href="https://wiki.x5.ru/pages/viewpage.action?pageId=129043254">Инструкция по CAB</a></p>
</div>

<form class="aui" id="form" method="POST" action="" enctype="application/json">
    <div id="message"></div>
    <div id="box">
        <div class="left">
            <div class="field-group" id = "divSystemCabSingle">
                <label for="systemCab">Система</label>
                <select class="select" id="systemCab" name="systemCab">
                    <option value="0">Select</option>
                </select>
            </div>
            <div class="field-group" id = "divSystemCabMulti" hidden>
                <label for="systemCabMulti">Система</label>
                <select class="multiselect" id="systemCabMulti" name="systemCabMulti" multiple>
                </select>
            </div>
            <fieldset class="group">
                <div class="checkbox">
                    <input class="checkboxes" type="checkbox" name="checkbox" id="check1" value="1">
                    <label for="check1">Показывать все системы</label>
                </div>
                <div class="checkbox">
                    <input class="checkboxes" type="checkbox" name="checkbox" id="check2" value="2">
                    <label for="check2">Где я согласующий</label>
                </div>
                <div class="checkbox">
                    <input class="checkboxes" type="checkbox" name="checkbox" id="check3" value="3">
                    <label for="check3">Где я авторизующий</label>
                </div>
                <div class="checkbox">
                    <input class="checkboxes" type="checkbox" name="checkbox" id="check4" value="4">
                    <label for="check4">Где я delivery</label>
                </div>
            </fieldset>
            <div class="field-group" id = "divTypeChangeMulti" hidden>
                <label for="typechangeMulti">Тип изменения</label>
                <select class="multiselect" id="typechangeMulti" name="typechangeMulti" multiple>
                </select>
            </div>
            <div class="field-group" id = "divTypeChangeSingle">
                <label for="typechange">Тип изменения</label>
                <select class="select" id="typechange" name="typechange">
                    <option value="0">Select</option>
                </select>
            </div>
            <div class="field-group">
                <label for="stage1" id="stage1Label"></label>
                <select class="multiselect" id="stage1" name="stage1" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="stage1CheckMulti" value="1">
                    <label for="stage1CheckMulti" id="stage1LabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="stage21" id="stage21Label"></label>
                <select class="multiselect" id="stage21" name="stage21" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="stage21CheckMulti" value="2">
                    <label for="stage21CheckMulti" id="stage21LabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="stage22" id="stage22Label"></label>
                <select class="multiselect" id="stage22" name="stage22" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="stage22CheckMulti" value="3">
                    <label for="stage22CheckMulti" id="stage22LabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="stage23" id="stage23Label"></label>
                <select class="multiselect" id="stage23" name="stage23" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="stage23CheckMulti" value="4">
                    <label for="stage23CheckMulti" id="stage23LabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="stage3" id="stage3Label"></label>
                <select class="multiselect" id="stage3" name="stage3" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="stage3CheckMulti" value="5">
                    <label for="stage3CheckMulti" id="stage3LabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="authorize" id="authorizeLabel"></label>
                <select class="multiselect" id="authorize" name="authorize" multiple disabled>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="authorizeCheckMulti" value="6">
                    <label for="authorizeCheckMulti" id="authorizeLabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="delivery" id = "deliveryLabel"></label>
                <select class="multiselect" id="delivery" name="delivery" disabled>
                    <option value="0">Empty</option>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="deliveryCheckMulti" value="7">
                    <label for="deliveryCheckMulti" id="deliveryLabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label for="active" id = "activeLabel"></label>
                <select class="selectdown" id="active" name="active" disabled>
                    <option value="true">Да</option>
                    <option value="false">Нет</option>
                </select>
                <div class = "checkMultiDiv" hidden>
                    <input class="checkboxMulti" type="checkbox" name="checkbox" id="activeCheckMulti" value="8">
                    <label for="activeCheckMulti" id="activeLabelMulti"></label>
                </div>
            </div>
            <div class="field-group">
                <label id = "bulk-edit-label" for="bulk-edit" hidden>Bulk edit</label>
                <aui-toggle class = "bilk-edit" id="bulk-edit" hidden></aui-toggle>
            </div>
            <div class="buttons-container">
                <div class="exportButton" hidden>
                    <a id = "exportButton" href="#" download="export.csv">Выгрузить данные по системам где я Delivery</a>
                </div>
                <div class="buttons" style="margin-top: 1%">
                    <input class="button submit" type="submit" value="Save" id="save" disabled>
                    <a class="cancel" id="cancel" href="#">Cancel</a>
                </div>
            </div>

        </div>

        <div class="right">
            <a id="link-hide-table"></a><br>
            <a id="link-return-values" hidden>Откатить изменения</a>
            <div class="table-history" style=" overflow: auto" hidden>
                <table class="aui" id="history-table">
                    <thead>
                    <tr>
                        <th id="when">Когда</th>
                        <th id="who">Кто</th>
                        <th id="typeChange">Тип изменения</th>
                        <th id="stage">Стадия</th>
                        <th id="change">Изменение</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>
</body>
</html>